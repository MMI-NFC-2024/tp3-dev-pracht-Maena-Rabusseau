  <div class="flex flex-col items-center gap-4 my-6">
  <select id="species" class="class="p-3 border-2 border-gray-300 rounded-lg shadow-md bg-white text-center focus:outline-none focus:ring-2 focus:ring-blue-400"">
<option value="Adelie">Adelie</option>
<option value="Chinstrap">Chinstrap</option>
<option value="Gentoo">Gentoo</option>
</select>
<script>
document.querySelector("#species")?.addEventListener("change", (evt) => {
const value = (evt.target as HTMLSelectElement).value;
location.pathname = "/species/"+value;
});
</script>




<iframe
  id="species-frame"
  src="/species/Adelie/"
  
  width="100%"
  height="600"
  style="border: 1px solid #ccc; border-radius: 8px;">
</iframe>

